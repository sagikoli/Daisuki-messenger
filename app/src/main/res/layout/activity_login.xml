<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:background="@color/colorAccent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_imgview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login"></ImageView>

            <EditText
                android:id="@+id/email_edittextview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/login_imgview"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/email"
                android:hint="email id"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_edittextview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/email_edittextview"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inputs"
                android:drawableStart="@drawable/lock"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_pass_txtview"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/buttons"
                android:padding="10dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/forgot_pass_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_edittextview"
                android:layout_marginTop="5dp"
                android:text="Forgot password ?"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_account_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_button"
                android:layout_marginTop="10dp"
                android:text="Create new account"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_account_txtview"
                android:layout_marginTop="15dp"
                android:text="Or login using your"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/phone_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_button"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/buttons"
                android:drawableStart="@drawable/phone"
                android:padding="10dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textAlignment="center"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>